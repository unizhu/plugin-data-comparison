{
  "extends": "@salesforce/dev-config/tsconfig-strict-esm",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",

    "lib": ["ES2022"], // <-- keep DOM out to avoid SharedArrayBuffer conflicts
    "types": ["node"], // <-- use Node globals/Buffer
    "skipLibCheck": true // <-- ignore transitive d.ts like memfs' buffer types
  },
  "include": ["./src/**/*.ts"]
}
